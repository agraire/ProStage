{% extends 'base.html.twig' %}
{% block nomPage %}

	<h1>Détails de la formation
	</h1>


	<table>
		<tbody>
			<tr>
				<th>
					Nom
				</th>
				<td>
					{{formation.nom}}
				</td>
			</tr>
			<tr>
				<th>
					Nom complet
				</th>
				<td>
					{{formation.nomComplet}}
				</td>
			</tr>
			<tr>
				<th>
					Stages Proposés
				</th>
				<td>
					<table>
						<tbody>
							{% for stage in stages %}
								<tr>
									<td>
										<a class="nav-link" href="{{path('ProStage_stage', {id:stage.id})}}">
											{{stage.id}}
										</a>
									</td>
									<td>
										{{stage.titre}}
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
